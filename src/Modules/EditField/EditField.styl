@import '../../Assets/variables.styl';

.edit-field-container
  width 450px
  // border-top 1px solid $color-primary-bg
  border-bottom 1px solid $color-primary-bg

.editable-block
  display flex
  flex-direction column
  align-items center

.btns-block
  display flex
  justify-content center

.extra-label
  padding 10px

.info-span
  font bold 18px/20px Georgia, sans-serif
  color $color-text-default
  display flex
  background-color $color-primary-bg
  justify-content center
  border-radius 5px
  margin 10px
  padding 10px

.data-body-title
  white-space nowrap
  max-width 150px
  overflow hidden
  text-overflow ellipsis

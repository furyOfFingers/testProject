@import '../../Assets/variables.styl';

.container
  display block
  position relative
  padding-left 35px
  cursor pointer
  font normal 18px/20px Georgia, sans-serif
  color $color-text-default
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  margin 10px 0

.container input
  position absolute
  opacity 0
  cursor pointer
  height 0
  width 0

.checkmark
  position absolute
  top -2px
  left 0
  height 25px
  width 25px
  background-color $color-white-gray
  border-radius 5px
  border 1px solid $color-primary-bg

.container:hover input ~ .checkmark
  background-color $color-white-gray

.container input:checked ~ .checkmark
  background-color $color-green

.checkmark:after
  content ""
  position absolute
  display none

.container input:checked ~ .checkmark:after
  display block

.container .checkmark:after
  left 9px
  top 5px
  width 5px
  height 10px
  border solid $color-white
  border-width 0 3px 3px 0
  -webkit-transform rotate(45deg)
  -ms-transform rotate(45deg)
  transform rotate(45deg)
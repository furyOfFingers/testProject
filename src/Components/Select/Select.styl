@import '../../Assets/variables.styl';

.custom-select-container
  display inline-block
  padding 5px 10px

.custom-select-container > span
  font normal 16px/20px Georgia, sans-serif
  color $color-textLabel-default
  padding 0 2px

.select
  position relative
  background-color $color-white-gray-gray
  padding 5px 8px
  cursor pointer
  font normal 16px/20px Georgia, sans-serif
  color $color-text-default

.select > span
  position absolute
  padding 0 10px
  right 0px
  border-left 1px solid $color-primary-bg
  &:after
    content ''
    top 2px
    border-style solid;
    border-width 9px 5px 5px 5px
    border-color $color-text-default transparent transparent transparent
    display inline-block
    vertical-align middle
    position relative
  &.triangle
    &:after
      top -3px
      border-style solid;
      border-width 5px 5px 9px 5px
      border-color transparent transparent #2b2b2b transparent
      display inline-block
      vertical-align middle
      position relative

.select div > div
  text-align center
  border-bottom 1px solid $color-primary-bg
  padding 2px 5px
  &:hover
    background-color $color-primary-bg

@import '../../Assets/variables.styl';

.table-container
  display flex
  margin 10px
  border 1px solid $color-primary-bg

table
  max-height 400px
  max-width 500px

.table-container th
  padding 3px
  background-color $color-primary-bg

.table-container td
  padding 3px

.table-container tr
  &:nth-child(odd)
    background-color #f2f2f2

.table-container-header
  text-align center
@import '../../Assets/variables.styl';

.input-container
  position relative

.input-container input
  font normal 18px/20px Georgia, sans-serif
  margin: 5px 10px;
  padding: 5px 10px;
  border-radius 5px
  background-color transparent
  border 1px solid $color-primary-bg
  color $color-text-default

.input-container p
  padding-left 10px
  margin-left 5px
  font-size 16px
  margin-top: 0px;
  color $color-text-default
  margin-bottom 5px

.error
  p, input
    outline none
    color $color-red
  input
    border 1px solid $color-red
